<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/lightgray"
    tools:context=".ReportActivity">

    <Button
        android:id="@+id/closeReport"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/back_accent"
        android:onClick="onBackButtonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reportLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.35000002">

        <RadioGroup
            android:id="@+id/reportTypeRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason_for_reporting" />

            <RadioButton
                android:id="@+id/reportRBspam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spam"
                android:textColor="@color/darkgray"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="29dp" />

            <RadioButton
                android:id="@+id/reportRBpersonalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_information"
                android:textColor="@color/darkgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="33dp" />

            <RadioButton
                android:id="@+id/reportRBthreat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threatening"
                android:textColor="@color/darkgray"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="90dp" />

            <RadioButton
                android:id="@+id/reportRBvulgar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vulgar_or_offensive"
                android:textColor="@color/darkgray"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="90dp" />

            <RadioButton
                android:id="@+id/reportRBother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"
                android:textColor="@color/darkgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="134dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/reportAIlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/additional_information"
            android:textColor="@color/darkgray"
            app:layout_constraintStart_toStartOf="@+id/reportTypeRG"
            app:layout_constraintTop_toBottomOf="@+id/reportTypeRG" />

        <EditText
            android:id="@+id/reportAdditionalText"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/rounded_square_black"
            android:ems="10"
            android:gravity="top|start"
            android:maxLength="200"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="@+id/reportAIlabel"
            app:layout_constraintTop_toBottomOf="@+id/reportAIlabel" />


        <Button
            android:id="@+id/reportSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_square_filled_accentcolor"
            android:onClick="onReportSubmit"
            android:padding="12dp"
            android:text="@string/submit"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/reportAdditionalText"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="@+id/reportAdditionalText"
            app:layout_constraintTop_toBottomOf="@+id/reportAdditionalText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:text="@string/report_post"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/reportProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>