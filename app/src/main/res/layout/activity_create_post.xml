<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createPostLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/lightgray"
    tools:context=".CreatePostActivity">

    <Button
        android:id="@+id/closeFullSizeImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/back_accent"
        android:onClick="onBackButtonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createPostHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/create_a_post"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postIconRv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/postTitleEditText"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintEnd_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/postTitleEditText" />

    <EditText
        android:id="@+id/postTitleEditText"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:maxLength="52"
        app:layout_constraintBottom_toTopOf="@+id/createPostImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/createPostImage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461"
        android:adjustViewBounds="true"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/text"
        app:layout_constraintEnd_toStartOf="@+id/postBodyEditText"
        app:layout_constraintTop_toBottomOf="@+id/createPostImage" />


    <EditText
        android:id="@+id/postBodyEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:maxLength="200"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/createPostImage" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_square_filled_accentcolor"
        android:drawableStart="@drawable/camera"
        android:onClick="cameraButtonClicked"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/postSubmitButton"
        app:layout_constraintEnd_toStartOf="@+id/postSubmitButton"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/postBodyEditText"
        app:layout_constraintTop_toTopOf="@+id/postSubmitButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorAccent" />

    <Button
        android:id="@+id/postSubmitButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_square_filled_accentcolor"
        android:onClick="createPost"
        android:text="@string/post"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/postBodyEditText"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/postBodyEditText"
        app:layout_constraintTop_toBottomOf="@+id/postBodyEditText" />

    <TextView
        android:id="@+id/iconSelectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon"
        app:layout_constraintEnd_toStartOf="@+id/postIconRv"
        app:layout_constraintTop_toTopOf="@+id/postIconRv" />

    <ProgressBar
        android:id="@+id/createPostProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/postBodyEditText"
        app:layout_constraintStart_toStartOf="@+id/postBodyEditText"
        app:layout_constraintTop_toBottomOf="@+id/postSubmitButton"
        app:layout_constraintVertical_bias="0.26999998" />

</androidx.constraintlayout.widget.ConstraintLayout>