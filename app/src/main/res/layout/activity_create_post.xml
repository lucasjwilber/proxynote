<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createPostLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/lightgray"
    tools:context=".CreatePostActivity">

    <Button
        android:id="@+id/closeFullSizeImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/back_accent"
        android:onClick="onBackButtonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createPostHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/create_a_post"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postIconRv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/postTitleEditText"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintEnd_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/postTitleEditText" />

    <EditText
        android:id="@+id/postTitleEditText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="2dp"
        android:inputType="textPersonName"
        android:maxLength="52"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/mediaHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mediaHolder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/createPostHeader"
        app:layout_constraintVertical_bias="0.45"
        tools:visibility="visible" >

        <ImageView
            android:id="@+id/createPostImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/createPostVideo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/text"
        app:layout_constraintEnd_toStartOf="@+id/postBodyEditText"
        app:layout_constraintTop_toBottomOf="@+id/mediaHolder" />


    <EditText
        android:id="@+id/postBodyEditText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine"
        android:maxLength="200"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/mediaHolder" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_square_filled_accentcolor"
        android:drawableStart="@drawable/camera"
        android:onClick="onMediaButtonClicked"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/postSubmitButton"
        app:layout_constraintEnd_toStartOf="@+id/postSubmitButton"
        app:layout_constraintTop_toTopOf="@+id/postSubmitButton"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@color/colorAccent" />

    <Button
        android:id="@+id/videoButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_square_filled_accentcolor"
        android:drawableStart="@drawable/video"
        android:onClick="onMediaButtonClicked"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/postSubmitButton"
        app:layout_constraintEnd_toStartOf="@+id/postSubmitButton"
        app:layout_constraintStart_toEndOf="@+id/cameraButton"
        app:layout_constraintTop_toTopOf="@+id/postSubmitButton"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@color/colorAccent" />

    <Button
        android:id="@+id/postSubmitButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_square_filled_accentcolor"
        android:onClick="createPost"
        android:text="@string/post"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/postBodyEditText"
        app:layout_constraintTop_toBottomOf="@+id/postBodyEditText" />

    <TextView
        android:id="@+id/iconSelectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon"
        app:layout_constraintEnd_toStartOf="@+id/postIconRv"
        app:layout_constraintTop_toTopOf="@+id/postIconRv" />

    <ProgressBar
        android:id="@+id/createPostProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/postBodyEditText"
        app:layout_constraintEnd_toEndOf="@+id/postTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/postTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/postTitleEditText"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/anonymousCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Anonymous"
        app:layout_constraintBottom_toBottomOf="@+id/postSubmitButton"
        app:layout_constraintStart_toStartOf="@+id/postBodyEditText"
        app:layout_constraintTop_toTopOf="@+id/postSubmitButton"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>