<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:animateLayoutChanges="true"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/loginBackButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/back_accent"
        android:onClick="onBackButtonClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="50"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/proxynote_logo_pink" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:text="@string/app_name"
            android:textColor="@color/darkgray"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/loginActLogo2"
            app:layout_constraintStart_toEndOf="@+id/loginActLogo2"
            app:layout_constraintTop_toTopOf="@+id/loginActLogo2" />
    </LinearLayout>

<!--    base login layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginBaseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        android:animateLayoutChanges="true"
        android:background="@color/lightgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.25"
            tools:visibility="visible">

            <TextView
                android:id="@+id/loginActUsernameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/darkgray"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/loginActUsernameEditText"
                app:layout_constraintEnd_toStartOf="@+id/loginActUsernameEditText"
                app:layout_constraintTop_toTopOf="@+id/loginActUsernameEditText"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/loginActUsernameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/loginActEmailEditText"
                app:layout_constraintEnd_toEndOf="@+id/loginActEmailEditText"
                app:layout_constraintStart_toEndOf="@+id/loginActEmailLabel"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/loginActEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_email"
                android:textColor="@color/darkgray"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/loginActEmailEditText"
                app:layout_constraintEnd_toStartOf="@+id/loginActEmailEditText"
                app:layout_constraintTop_toTopOf="@+id/loginActEmailEditText" />

            <EditText
                android:id="@+id/loginActEmailEditText"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="40"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.26" />

            <TextView
                android:id="@+id/loginActPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_password"
                android:textColor="@color/darkgray"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/loginActPasswordEditText"
                app:layout_constraintEnd_toStartOf="@+id/loginActPasswordEditText"
                app:layout_constraintTop_toTopOf="@+id/loginActPasswordEditText" />

            <!--    <Button-->
            <!--        android:id="@+id/loginActForgotPwBtn"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_gravity="end"-->
            <!--        android:background="@android:color/transparent"-->
            <!--        android:text="Forgot password?"-->
            <!--        android:textSize="12sp"-->
            <!--        android:visibility="gone" />-->

            <TextView
                android:id="@+id/loginActConfirmPasswordCLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/loginActConfirmPasswordPLabel"
                app:layout_constraintStart_toStartOf="@+id/loginActConfirmPasswordPLabel"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/loginActConfirmPasswordPLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_password"
                android:textColor="@color/darkgray"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/loginActConfirmPasswordEditText"
                app:layout_constraintEnd_toStartOf="@+id/loginActConfirmPasswordEditText"
                app:layout_constraintTop_toTopOf="@+id/loginActConfirmPasswordEditText"
                app:layout_constraintVertical_bias="0.79"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/loginActPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="40"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/loginActEmailEditText"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/loginActEmailEditText"
                app:layout_constraintTop_toBottomOf="@+id/loginActEmailEditText"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/loginActConfirmPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="40"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/loginActPasswordEditText"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/loginActPasswordEditText"
                app:layout_constraintTop_toBottomOf="@+id/loginActPasswordEditText"
                tools:visibility="visible" />

            <Button
                android:id="@+id/loginActSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_square_filled_accentcolor"
                android:onClick="onSubmitButtonClicked"
                android:text="@string/login"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginActConfirmPasswordEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/loginProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.31"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="50"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="loginButtonClicked"
                android:text="@string/login"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                tools:text="LOGIN" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/separator"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="30sp" />

            <Button
                android:id="@+id/signupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="signupButtonClicked"
                android:text="@string/sign_up"
                android:textColor="@color/gray"
                android:textSize="20sp"
                tools:text="SIGN UP" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


<!--    email verification popup-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailVerificationModal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        android:animateLayoutChanges="true"
        android:background="@color/lightgray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="328dp"
            android:layout_height="145dp"
            android:text="@string/thank_you_for_signing_up"
            android:textColor="@color/darkgray"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16000003" />

        <Button
            android:id="@+id/resendEmailVerification"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onResendEmailVerificationClick"
            android:text="@string/re_send"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/didnt_get_an_email"
            app:layout_constraintEnd_toEndOf="@+id/goToMap"
            app:layout_constraintStart_toStartOf="@+id/goToMap"
            app:layout_constraintTop_toBottomOf="@+id/goToMap"
            tools:text="Didn't get an email?" />

        <Button
            android:id="@+id/goToMap"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_square_filled_accentcolor"
            android:onClick="onGoToMapClick"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/go_to_map"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>